@page "/"
@using BlazorApp1.Logic
@using BlazorApp1.Models
@inject GameEngine Engine 
@rendermode InteractiveServer

<PageTitle>Super Farmer</PageTitle>

@if (Engine.CurrentPlayer.HasWon())
{
    <div class="alert alert-success">🏆 Gratulacje! Zostałeś Super Farmerem!</div>
}

<h1>Twoja Farma</h1>

<div class="d-flex gap-4">
    <div class="card p-3 shadow-sm">
        <h3>Twoje Stado</h3>
        <p>🐰 Króliki: <strong>@Engine.CurrentPlayer.Rabbits</strong> <small class="text-muted">(Bank: @Engine.MainHerd[AnimalType.Rabbit])</small></p>
        <p>🐑 Owce: <strong>@Engine.CurrentPlayer.Sheep</strong> <small class="text-muted">(Bank: @Engine.MainHerd[AnimalType.Sheep])</small></p>
        <p>🐷 Świnie: <strong>@Engine.CurrentPlayer.Pigs</strong></p>
        <p>🐮 Krowy: <strong>@Engine.CurrentPlayer.Cows</strong></p>
        <p>🐴 Konie: <strong>@Engine.CurrentPlayer.Horses</strong></p>
        <hr />
        <p>🐕 Mały Pies: @(Engine.CurrentPlayer.HasSmallDog ? "✅" : "❌")</p>
        <p>🐩 Duży Pies: @(Engine.CurrentPlayer.HasBigDog ? "✅" : "❌")</p>
    </div>

    <div class="card p-3 shadow-sm text-center">
        <h3>Kostki</h3>
        @if (Engine.LastRoll.HasValue)
        {
            <div class="display-3 my-3">
                @GetIcon(Engine.LastRoll.Value.Die1) @GetIcon(Engine.LastRoll.Value.Die2)
            </div>
        }
        else
        {
            <div class="display-3 my-3 text-muted">🎲🎲</div>
        }
        <button class="btn btn-primary btn-lg" @onclick="HandleRoll">Rzuć kośćmi</button>
    </div>
</div>

<div class="mt-4 card p-3 shadow-sm">
    <h3>Targ (Wymiana)</h3>
    <div class="row">
        <div class="col-md-4">
            <h5>Wymień "w górę"</h5>
            <div class="d-grid gap-2">
                <button class="btn btn-outline-primary text-start" @onclick='() => Engine.Exchange(AnimalType.Rabbit, AnimalType.Sheep)'>
                    6x 🐰 ➔ 1x 🐑
                </button>
                <button class="btn btn-outline-primary text-start" @onclick='() => Engine.Exchange(AnimalType.Sheep, AnimalType.Pig)'>
                    2x 🐑 ➔ 1x 🐷
                </button>
                <button class="btn btn-outline-primary text-start" @onclick='() => Engine.Exchange(AnimalType.Pig, AnimalType.Cow)'>
                    3x 🐷 ➔ 1x 🐮
                </button>
                <button class="btn btn-outline-primary text-start" @onclick='() => Engine.Exchange(AnimalType.Cow, AnimalType.Horse)'>
                    2x 🐮 ➔ 1x 🐴
                </button>
            </div>
        </div>

        <div class="col-md-4">
            <h5>Wymień "w dół"</h5>
            <div class="d-grid gap-2">
                <button class="btn btn-outline-info text-start" @onclick='() => Engine.Exchange(AnimalType.Horse, AnimalType.Cow)'>
                    1x 🐴 ➔ 2x 🐮
                </button>
                <button class="btn btn-outline-info text-start" @onclick='() => Engine.Exchange(AnimalType.Cow, AnimalType.Pig)'>
                    1x 🐮 ➔ 3x 🐷
                </button>
                <button class="btn btn-outline-info text-start" @onclick='() => Engine.Exchange(AnimalType.Pig, AnimalType.Sheep)'>
                    1x 🐷 ➔ 2x 🐑
                </button>
                <button class="btn btn-outline-info text-start" @onclick='() => Engine.Exchange(AnimalType.Sheep, AnimalType.Rabbit)'>
                    1x 🐑 ➔ 6x 🐰
                </button>
            </div>
        </div>

        <div class="col-md-4">
            <h5>Kup ochronę</h5>
            <div class="d-grid gap-2">
                <button class="btn btn-outline-warning text-start" @onclick='() => Engine.Exchange(AnimalType.Sheep, AnimalType.SmallDog)'>
                    1x 🐑 ➔ Mały Pies 🐕
                </button>
                <button class="btn btn-outline-danger text-start" @onclick='() => Engine.Exchange(AnimalType.Cow, AnimalType.BigDog)'>
                    1x 🐮 ➔ Duży Pies 🐩
                </button>
            </div>
        </div>
    </div>
</div>
@code {
    private void HandleRoll() => Engine.RollDice();

    private string GetIcon(AnimalType type) => type switch {
        AnimalType.Rabbit => "🐰", AnimalType.Sheep => "🐑", AnimalType.Pig => "🐷",
        AnimalType.Cow => "🐮", AnimalType.Horse => "🐴", AnimalType.Fox => "🦊",
        AnimalType.Wolf => "🐺", _ => "❓"
    };
}